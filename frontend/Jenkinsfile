//Jenkinsfile Frontend (Declarative Pipeline)
pipeline {
    agent any

    stages {
        stage('Build Frontend'){
            steps {
            withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'pass', usernameVariable: 'user')]) {    

                sh "docker build . -t frontend"
            }

        }
           
        }
    }
}